<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.bdqn.simplebook.web.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>com.bdqn.simplebook.web.servlets.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>favourite</servlet-name>
        <servlet-class>com.bdqn.simplebook.web.servlets.FavouriteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>favourite</servlet-name>
        <url-pattern>/favourite/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>post</servlet-name>
        <servlet-class>com.bdqn.simplebook.web.servlets.PostServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>post</servlet-name>
        <url-pattern>/post/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>relation</servlet-name>
        <servlet-class>com.bdqn.simplebook.web.servlets.RelationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>relation</servlet-name>
        <url-pattern>/relation/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>report</servlet-name>
        <servlet-class>com.bdqn.simplebook.web.servlets.ReportServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>report</servlet-name>
        <url-pattern>/report/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>topic</servlet-name>
        <servlet-class>com.bdqn.simplebook.web.servlets.TopicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>topic</servlet-name>
        <url-pattern>/topic/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>comments</servlet-name>
        <servlet-class>com.bdqn.simplebook.web.servlets.CommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>comments</servlet-name>
        <url-pattern>/comments/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>commons_like</servlet-name>
        <servlet-class>com.bdqn.simplebook.web.servlets.Commons_LikeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>commons_like</servlet-name>
        <url-pattern>/commons/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>email</servlet-name>
        <servlet-class>com.bdqn.simplebook.web.servlets.EmailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>email</servlet-name>
        <url-pattern>/email/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>photo</servlet-name>
        <servlet-class>com.bdqn.simplebook.web.servlets.PhotoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>photo</servlet-name>
        <url-pattern>/photo/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>post/selectAllPost</welcome-file>
    </welcome-file-list>

</web-app>